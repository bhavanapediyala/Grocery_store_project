<div class="form-group row">
    <label class="col-form-label col-sm-2" for="Name">Name</label>
    <div class="col-sm-8">
      <input autofocus class="form-control" name="Name" value="<%= model.Name %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="Price">Price</label>
    <div class="col-sm-7">
      <!-- it was Author -->
      <input class="form-control" name="Price" value="<%= model.Price %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="Quantity">Quantity</label>
    <div class="col-sm-10">
      <textarea class="form-control" cols="20" name="Quantity" maxlength="32000" rows="7"><%= model.Quantity %></textarea>
    </div>
  </div>
