<div class="form-group row">
    <label class="col-form-label col-sm-2" for="Name">Name</label>
    <div class="col-sm-8">
      <input readonly class="form-control" id="Name" value="<%= model.Name %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="Price">Price</label>
    <div class="col-sm-7">
      <input readonly class="form-control" id="Price" value="<%= model.Price %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="Quantity">Quantity</label>
    <div class="col-sm-10">
      <textarea readonly class="form-control" cols="20" id="Quantity" maxlength="32000" rows="7"><%= model.Quantity %></textarea>
    </div>
  </div>

    
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="Cost">Cost</label>
    <div class="col-sm-10">
      <textarea readonly class="form-control" cols="20" id="Cost" maxlength="32000" rows="7"><%= model.Cost %></textarea>
    </div>
  </div>